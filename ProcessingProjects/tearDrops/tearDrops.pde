void teardrop(float offsetX, float offsetY, float size) {
  push();
  noStroke();
  translate(offsetX, offsetY);
  triangle(0+size/2, 0.0, 0-size/2, 0.0, 0.0, -10-size/2);
  arc(0, 0, size, size, radians(0), radians(180), OPEN);
  pop();
}
